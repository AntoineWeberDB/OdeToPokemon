@page "{pokemonId:int?}"
@model OdeToPokemon.Pages.Pokemons.EditModel
@{
    ViewData["Title"] = "Edit";
}

@if (Model.Pokemon.Id > 0)
{
    <h2>Editing @Model.Pokemon.Name</h2>
}
else
{
    <h2>Creating new Pokemon</h2>
}

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-info"> @Model.ErrorMessage</div>
}

<form method="post">

    <div class="form-group">
        <label asp-for="Pokemon.Id"></label>
        <input asp-for="Pokemon.Id" class="form-control" />
        <span class="text-danger" asp-validation-for="Pokemon.Id"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pokemon.Name"></label>
        <input asp-for="Pokemon.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Pokemon.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pokemon.Type"></label>
        <select class="form-control" asp-for="Pokemon.Type" asp-items="Model.PokemonTypes"></select>

    </div>
    <div class="form-group">
        <label>Previous Evolution</label>
        <select class="form-control" asp-for="PokemonPreviousId" asp-items="Model.PokemonsListPrevious"></select>
    </div>
    <div class="form-group">
        <label> Next Evolution</label>
        <select class="form-control" asp-for="PokemonNextId" asp-items="Model.PokemonsListNext"></select>
    </div>


    <button type="submit" class="btn btn-primary"> Save </button>
</form>



<a asp-page="./List" class="btn btn-default"> All Pokemons</a>